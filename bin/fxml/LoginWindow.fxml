<AnchorPane maxHeight="366.0" maxWidth="340.0" minHeight="240.0" minWidth="315.0" prefHeight="240.0" prefWidth="315.0" styleClass="main-pane" stylesheets="@../css/LoginWindow.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.milbar.gui.LoginWindowController">
    <children>
        <Label layoutX="94.0" layoutY="21.0" prefHeight="62.0" prefWidth="210.0" styleClass="big-label" stylesheets="@../css/LoginWindow.css" text="Zaloguj się" textAlignment="CENTER">
            <font>
                <Font name="Times New Roman" size="28.0" />
            </font></Label>
        <TextField fx:id="userNameField" layoutX="98.0" layoutY="97.0" onAction="#userNameEntered" onKeyReleased="#userNameEntered" promptText="Użytkownik" styleClass="text-field" stylesheets="@../css/LoginWindow.css" />
        <PasswordField fx:id="passwordField" layoutX="98.0" layoutY="137.0" onAction="#loginButtonClicked" onKeyReleased="#passwordEntered" promptText="Hasło" styleClass="text-field" />
        <Button layoutX="160.0" layoutY="183.0" mnemonicParsing="false" onAction="#loginButtonClicked" prefHeight="30.0" prefWidth="113.0" styleClass="button" stylesheets="@../css/LoginWindow.css" text="Zaloguj" />
