        <ImageView fitHeight="30.0" fitWidth="34.0" layoutX="67.0" layoutY="97.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../images/login.png" />
        </ImageView>
        <ImageView fitHeight="30.0" fitWidth="34.0" layoutX="67.0" layoutY="137.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../images/password.png" />
        </ImageView>
    </children>
</AnchorPane>
